<% if (errors) { %>
  <ul>
  <% errors.forEach(function(error){ %>
    <li><%= error %></li>
  <% }) %>
  </ul>
<% } %> 

<form id="post_form">
  <label for="title">Title</label>
  <input type="text" id="name" name="post[title]" value="<%= post.escape('title')%>"><br>
  <label for="body">Content</label>
  <textarea type="text" id="body" name="post[body]"><%= post.escape('body')%></textarea><br>
  
  <input type="submit" value="Submit">
</form>